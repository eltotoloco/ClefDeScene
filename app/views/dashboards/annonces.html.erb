	<div class="row">
		<div class="row">

			<%= render partial: 'static_pages/dashboard_nav_bar' %>
		</div>
		<div class="col-md-6 col-md-offset-3">

			<% @annonces.each do |annonce| %>
			<div class="row">				
				<div class="panel panel-default col-md-8">
					<div class="panel-body">
						<div class="row">
							<h3><%= annonce.name%></h3>
						</div>
						<div class="row">
							<%= image_tag annonce.avatar_url(:thumb) if annonce.avatar.url.present? %>
						</div>
						<div class="row">
							<%= link_to  I18n.t('button.edit'), sti_annonce_path(annonce.type, annonce, :edit) %>
							<%= link_to  I18n.t('button.show'), annonce %>
						</div>
					</div>
				</div>
			</div>
			<% end %>
		</div>
	</div>