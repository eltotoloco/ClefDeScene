 <% if resource.errors.any? %>
 <div id="error_explanation">
  <h2><%= pluralize(resource.errors.count, "error") %> prohibited this resource from being saved:</h2>

  <ul>
    <% resource.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<h2>Log in</h2>
<div class="row">
  <div class="col-md-offset-4 col-md-3">

    <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row">
      <div class="col-sm-12">
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email,hide_label: true, autofocus: true %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <div class="field">
          <%= f.label :password %><br />
          <%= f.password_field :password,hide_label: true, autocomplete: "off" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me, hide_label: true %>
        </div>
        <% end -%>
      </div>
    </div>
    <div class="row">
      <div class="actions col-md-4 col-md-offset-3 ">
        <%= f.submit I18n.t('devise.sessions.sign_in') %>
      </div>
    </div>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-md-offset-4 col-md-4">
    <%= render "users/shared/links" %>
  </div>
</div>