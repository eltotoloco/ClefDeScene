
<div class="col-md-offset-4 col-md-12">
<%= bootstrap_form_for @user, { url: {action: "create"}, validate: false} do |f| %>
<%= devise_error_messages! %>
<div class="row">
  <div class="row">

    <div class="col-sm-4">
      <%= f.label :email %>
      <%= f.email_field :email,hide_label: true %>
    </div>
  </div>
  <div class="row">

    <div class="col-sm-4">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password,hide_label: true, autocomplete: "off" %>
    </div>
  </div>
  <div class="row">

    <div class="col-sm-4">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation,hide_label: true, autocomplete: "off" %>
    </div>
  </div>
<div class="row">
  <div class="actions col-md-offset-3">
    <%= f.submit I18n.t('devise.sessions.sign_up') %>
  </div>
  <% end %>
</div>
</div>
<%= render "users/shared/links" %>


</div>