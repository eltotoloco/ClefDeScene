<div class="row">
  <div class="col-lg-3 col-md-4 col-sm-4 ">
    <div class="row">
      <% if group.avatar.url.present? %>
      <%= image_tag(group.avatar.url.to_s,width:"220", height:"277") %>
      <% elsif %>
      <img id="preview_avatar" width="220" height="277">
      <% end %>
    </div>
    <div class="row">
    <i class="glyphicon glyphicon-music center"></i>
    </div>
  </div>
  <div class="col-lg-9 col-md-8 col-sm-8">
    <h1><%= group.name%></h1>
    <div class="row">
      <div class="col-md-6">
        <p>Niveau : <%= group.level%></p>
        <p>Date de création : <%= group.experience%></p>
      </div>
      <div class="col-md-6">
        <p>Temps moyen de préstation :<%= group.avg_time%>min</p>

      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <br>
        <p>Description : </p>
        <p><%= group.description%></p>
      </div>
    </div>
  </div>
</div>