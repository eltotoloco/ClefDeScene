<div class="row">
  <div class="container col-md-12 col-md-offset-3">
    <div class="row">
    <div class="stepwizard col-md-6">
        <div class="stepwizard-row setup-panel ">
          <div class="stepwizard-step col-md-4">
            <a href="#step-1" type="button" class="btn btn-primary btn-circle">1</a>
            <p>L'essentiel</p>
          </div>
          <div class="stepwizard-step col-md-4">
            <a href="#step-2" type="button" class="btn btn-default btn-circle disabled" >2</a>
            <p>Détails</p>
          </div>
          <div class="stepwizard-step col-md-4">
            <a href="#step-3" type="button" class="btn btn-default btn-circle disabled">3</a>
            <p>Montrer votre talent</p>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <%= bootstrap_nested_form_for annonce  do |f| %>
      <% if annonce.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(annonce.errors.count, "error") %> prohibited this annonce from being saved:</h2>

        <ul>
          <% annonce.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>
      <div class="row setup-content" id="step-1">
          <div class="col-md-6">
            <h3> L'essentiel </h3>
            <div class="form-group">
              <%= f.label :name %>
              <%= f.text_field :name, hide_label: true, class: "form-control",required: "required" %>
            </div>
            <div class="form-group">
              <% if annonce.avatar.thumb.url.present? %>
              <%= image_tag(annonce.avatar.thumb.url.to_s) %>
              <%= f.label :remove_avatar do %>
              <%= f.check_box :remove_avatar %>
              <% end %>
              <% end %>
              <%= f.file_field :avatar %>
              <%= f.hidden_field :avatar_cache %>
            </div>
            <div class="form-group">
              <%= f.label :experience %>
              <div class="input-daterange input-group" id="datepicker">
                <%= f.text_field :experience,hide_label: true, :class => "input-sm form-control", :id =>"start",required: "required"  %>
              </div>
            </div>

            <% if @type == "Annonce" %>
            <div class="form-group">
              <%= f.label :type %><br>
              <%= f.select :type, Annonce.types.map {|r| [r.humanize, r.camelcase]}, {}, disabled: @type != "Annonce" %> 
            </div>
            <% else %>
            <%= f.hidden_field :type, value: @type %>
            <% end %>
            <%= f.hidden_field :user_id, value: current_user.id %>

            <% if @type == "Group" %>
            <div class="form-group">
              <%= f.label :style %>
              <%= f.text_field :style, hide_label: true ,required: "required"%>
            </div>
            <% end %>
            <button class="btn btn-primary nextBtn btn-lg pull-right" type="button" >Next</button>
          </div>
      </div>
      <div class="row setup-content" id="step-2">
        <div class="col-xs-12">
          <div class="col-md-6">
            <h3> Détails </h3>
            <div class="form-group">
              <%= f.label :description %>
              <%= f.text_area :description,hide_label: true, size: "60x12" %>
            </div>
            <% if @type == "Group" %>
            <div class="form-group">
              <h3>Membres: </h3>
              <ul id="membres">
                <%= f.fields_for :membres do |membres_form| %>
                <li class="row">
                  <div class="col-md-5">
                    <%= membres_form.label :nom %>
                    <%= membres_form.text_field :nom,hide_label: true%>
                  </div>
                  <div class="col-md-5">
                    <%= membres_form.label :instrument %>
                    <%= membres_form.text_field :instrument,hide_label: true %>
                  </div>
                  <div class="col-md-2  vcenter">
                    <%= membres_form.link_to_remove  :class =>"btn btn-danger" do  %>
                    <span class="glyphicon glyphicon-remove"></span>
                    <% end %>
                  </div>
                </li>
                <% end %>
              </ul>
              <p><%= f.link_to_add I18n.t('button.add'), :membres, :data => { :target => "#membres" } %></p>

            </div>
            <% end %>
            <button class="btn btn-primary backBtn btn-lg pull-left" type="button" >Back</button>

            <button class="btn btn-primary nextBtn btn-lg pull-right" type="button" >Next</button>
          </div>
        </div>
      </div>
      <div class="row setup-content" id="step-3">
        <div class="col-xs-12">
          <div class="col-md-8">
            <h3> Montrer votre talent </h3>

            <div class="form-group">

              <h3>Liens: </h3>
              <ul id="links">
                <%= f.fields_for :links do |links_form| %>
                <li>
                  <div class="row">
                    <div class="col-md-5">

                     <%= links_form.text_field :url %>
                   </div>
                   <div class="col-md-5">

                     <%= links_form.select :site, Link.sites.map {|r| [r.humanize, r.camelcase]}, {}%> 
                   </div>
                 </div>
                 <div class="row">
                   <%= links_form.link_to_remove I18n.t('button.destroy'), :class =>"btn btn-danger" %>
                 </div>
               </li>
               <% end %>
             </ul>
             <p><%= f.link_to_add I18n.t('button.add'), :links, :data => { :target => "#links" } %></p>
             <button class="btn btn-primary backBtn btn-lg pull-left" type="button" >Back</button>

             <button class="btn btn-success btn-lg pull-right" type="submit">Finish!</button>
           </div>
         </div>
       </div>
     </div>
     <% end %>
   </div>
 </div>
</div>


<script type="text/javascript">



 $('.input-daterange').datepicker({
  format: 'dd/mm/yyyy',
  autoclose: true,
  language: 'fr',
  startView: 1,
  endDate: new Date(),
});
</script>


