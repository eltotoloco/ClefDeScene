<p id="notice"><%= notice %></p>

<h1>Demandes</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Groupe</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Prix</th>
      <th>Statut</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @demandes.each do |demande| %>
      <tr>
        <td><%= demande.user %></td>
        <td><%= demande.groupe %></td>
        <td><%= demande.start_date %></td>
        <td><%= demande.end_date %></td>
        <td><%= demande.prix %></td>
        <td><%= demande.statut %></td>
        <td><%= link_to 'Show', demande %></td>
        <td><%= link_to 'Edit', edit_demande_path(demande) %></td>
        <td><%= link_to 'Destroy', demande, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

