<% if @groupe.errors.any? %>
  <div id="errors">
    <ul>
    <% @groupe.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>


<div class="row">
  <div class="col-md-6 col-md-offset-3">
  <%= nested_form_for(@groupe) do |f| %>


    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <% if @groupe.avatar.url.present? %>
      <%= image_tag(@groupe.avatar.url.to_s) %>
      <%= f.label :remove_avatar do %>
      <%= f.check_box :remove_avatar %>
      <% end %>
      <% end %>
      <%= f.file_field :avatar %>
      <%= f.hidden_field :avatar_cache %>
    </div>
    <div class="field">
      <%= f.label :date_de_creation %>
      <%= f.date_field :date_de_creation %>
    </div>

    <div class="field">
      <%= f.label :genre %>
      <%= f.text_field :genre %>
    </div>

    <div class="field">
      <%= f.label :description %>
      <%= f.text_area :description, size: "60x12" %>
    </div>

   

    <div class="actions">
      <%= f.submit %>
    </div>
    <% end %>
  </div>
</div>