<h2>Cration d'un nouveau groupe</h2>

<%= bootstrap_nested_form_for @groupe, url: {action: "create"}, :html => {:multipart => true} do |f| %>

<fieldset class="row">
  <div class="col-md-3 ">
   <%= f.text_field :name %>
 </div>


 <div class="col-md-3 ">
   <%= f.date_field :date_de_creation %>
 </div>

 <div class="col-md-3 ">
   <%= f.text_field :genre %>
 </div>
</fieldset>
<fieldset class="row">
  <div class="col-md-3 ">
    <%= f.label :avatar do %>
    <%= f.file_field :avatar %>
    <%= f.hidden_field :avatar_cache %>
    <% end %>
  </div>
</fieldset>
<fieldset class="row">

  <div class="col-md-3 ">
   <%= f.text_area :description%>
 </div>
</fieldset>
<fieldset >
  <h3>Membres: </h3>
  <ul id="membres">
    <%= f.fields_for :membres do |membres_form| %>
    <li class="row">
      <div class="col-md-3 ">

        <%= membres_form.text_field :nom %>
      </div>
      <div class="col-md-3 ">

        <%= membres_form.select(:instrument, options_for_select(Materiel.all.map(&:libelle)),prompt: true) %>
      </div>
      <div class="col-md-3 ">
        <%= membres_form.link_to_remove I18n.t('button.destroy'), :class =>"btn btn-danger" %>
      </div>
    </li>
    <% end %>
  </ul>
  <p><%= f.link_to_add I18n.t('button.add'), :membres, :data => { :target => "#membres" } %></p>



  <h3>Instruments: </h3>
  <ul id="instruments">
    <%= f.fields_for :utilises do |materiels_form| %>
    <li class="row">
      <div class="col-md-3">
        <%= materiels_form.collection_select(:materiel_id, Materiel.all, :id, :libelle, prompt: true)  %>
      </div>
      <div class="col-md-3">
        <%= materiels_form.select(:quantite,  options_for_select(0..10)) %>
      </div>
      <div class="col-md-3">
        <%= materiels_form.link_to_remove I18n.t('button.destroy'), :class =>"btn btn-danger" %>
      </div>

    </li>
    <% end %>
  </ul>
  <p><%= f.link_to_add I18n.t('button.add'), :utilises, :data => { :target => "#instruments" } %></p>

</fieldset>
<div class="actions">
	<%= f.submit "Create" %>
</div>
<% end %>


